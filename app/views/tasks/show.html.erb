<h1>Task detail</h1>

<div class="card">
  <div class="card-body">
    <%= @task.details %>
  </div>
</div>


<div class="mt-3">
  <% if @task.completed %>
    <input type="checkbox" checked>
    <label>This task is completed</label>>
  <% else %>
    <input type="checkbox">
    <label>This task is not completed yet</label>
  <% end %>
</div>

<div class="d-flex mt-5">
  <%= link_to "Edit task", task_edit_path(@task), class: 'btn btn-primary' %>
  <%= link_to "Back", :back, class: 'btn btn-outline-secondary ml-4' %>
</div>