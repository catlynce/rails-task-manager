<h1>Task detail</h1>
<p><%= @task.details %></p>
<div><%= link_to "Edit task", task_edit_path(@task) %></div>

<div>
<% if @task.completed %>
  <input type="checkbox" checked>
  <label>This task is completed</label>>
<% else %>
  <input type="checkbox">
  <label>This task is not completed yet</label>
<% end %>
</div>

<p><%= link_to "Back", :back %></p>